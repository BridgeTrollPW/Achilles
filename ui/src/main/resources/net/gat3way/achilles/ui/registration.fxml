<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.gat3way.achilles.ui.RegistrationController">
   <children>
      <Label text="Registration" />
      <TextField fx:id="userTextField" promptText="User" />
      <PasswordField fx:id="passwordTextField" promptText="Password" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="backToLoginButton" onAction="#onBackToLoginButtonPressed" text="Back to Login" textAlignment="CENTER" />
            <Button fx:id="registrationButton" layoutX="10.0" layoutY="10.0" onAction="#onRegistrationButtonPressed" text="Register" textAlignment="CENTER" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
